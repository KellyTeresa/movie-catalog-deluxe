      <td><%= hash["title"]%></td>
      <td><%= hash["year"] %></td>
      <td><%= hash["rating"]%></td>
      <td><%= hash["genre"]%></td>
      <td><%= hash["studio"]%></td>
    </tr>
    <% end %>
<p></p>
<p></p>
<p></p>
    <table>
      <tr>
        <td>Actors</td>
        <td>Characters</td>
      </tr>
      <% movie_actors.each do |hash| %>
      <tr>
        <td><a href="/actors/<%= hash["id"] %>"><%= hash["actor"] %></a></td>
        <td><%= hash["character"] %></td>
      </tr>
      <% end %>

    </table>

  </table>
